{
  "name": "fs-js-img-processing",
  "version": "1.0.0",
  "description": "Image Processing Project",
  "main": "server.ts",
  "scripts": {
    "build": "tsc",
    "clean:dist": "rimraf dist/",
    "copy-files": "copyfiles -a -u 1 src/**/public/images/* dist/",
    "serve": "ts-node src/server.ts",
    "serve:dist": "npm run clean:dist && npm run copy-files && tsc && node dist/server.js",
    "watch": "nodemon --exec ts-node src/server.ts",
    "test": "tsc && jasmine --config=jasmine.json",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [
    "jasmine",
    "eslint",
    "prettier",
    "express",
    "typescript",
    "jasmine",
    "image",
    "processing"
  ],
  "author": "Sergio Kagiema Fay",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/jasmine": "^4.0.3",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine": "^4.2.1",
    "jasmine-spec-reporter": "^7.0.0",
    "nodemon": "^2.0.16",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/sharp": "^0.30.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-pino-logger": "^7.0.0",
    "sharp": "^0.30.6"
  }
}
